{
  "expo": {
    "name": "react_native",
    "slug": "react_native",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "storytime_proj",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lital.storytime",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use the microphone.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.litals1379.react_native",
      "permissions": [
        "RECORD_AUDIO",
        "NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": {
            "scheme": "myapp",
            "host": "redirect"
          },
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/HomePage.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow $(react_native) to use the microphone.",
          "speechRecognitionPermission": "Allow $(react_native) to use speech recognition.",
          "androidSpeechServicePackages": [
            "com.google.android.googlequicksearchbox"
          ]
        }
      ],
      "expo-secure-store",
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "API_SOMEE": "http://www.storytimetestsitetwo.somee.com/api/",
      "API_RENDER_ANALYZING": "https://storytime-fp9z.onrender.com/analyze",
      "API_SOMEE_USER": "http://www.storytimetestsitetwo.somee.com/api/User/",
      "API_SOMEE_USER_REGISTER": "http://www.storytimetestsitetwo.somee.com/api/User/register/",
      "API_SOMEE_USER_LOGIN": "http://www.storytimetestsitetwo.somee.com/api/User/login",
      "API_SOMEE_USER_GET_BY_EMAIL": "http://www.storytimetestsitetwo.somee.com/api/User/GetUserByEmail/",
      "API_SOMEE_USER_ADD_CHILD": "http://www.storytimetestsitetwo.somee.com/api/User/addChild/",
      "API_SOMEE_USER_GET_USER_ID": "http://www.storytimetestsitetwo.somee.com/api/User/getUserByEmail/",
      "API_SOMEE_USER_ALL": "http://www.storytimetestsitetwo.somee.com/api/User/all",
      "API_SOMEE_USER_DELETE": "http://www.storytimetestsitetwo.somee.com/api/User/DeleteUser/",
      "API_SOMEE_USER_UPDATE": "http://www.storytimetestsitetwo.somee.com/api/User/UpdateUser/",
      "API_SOMEE_USER_UPDATE_PROFILE_IMAGE": "http://www.storytimetestsitetwo.somee.com/api/User/UpdateProfileImage",
      "API_SOMEE_USER_GET_BY_ID": "http://www.storytimetestsitetwo.somee.com/api/User/GetUserById/",
      "API_SOMEE_STORY_GENERATE": "http://www.storytimetestsitetwo.somee.com/api/Story/generate",
      "API_SOMEE_STORY_GET_AVAILABLE": "http://www.storytimetestsitetwo.somee.com/api/Story/GetAvailableStoriesForChild/",
      "API_SOMEE_STORY_GET_BY_ID": "http://www.storytimetestsitetwo.somee.com/api/Story/GetStoryById/",
      "API_SOMEE_STORY_GET_FOR_CHILD": "http://www.storytimetestsitetwo.somee.com/api/Story/GetStoryForChild/",
      "API_SOMEE_STORY_RATE": "http://www.storytimetestsitetwo.somee.com/api/Story/RateStory",
      "API_SOMEE_STORY_GET_BOOKS_READ": "http://www.storytimetestsitetwo.somee.com/api/Story/GetBooksReadByChild/",
      "API_SOMEE_READING_SESSION_REPORT": "http://www.storytimetestsitetwo.somee.com/api/ReadingSessionReport",
      "API_SOMEE_READING_SESSION_REPORT_FILTER": "http://www.storytimetestsitetwo.somee.com/api/ReadingSessionReport/filter",
      "API_SOMEE_RANDOM_WORDS": "http://www.storytimetestsitetwo.somee.com/api/randomwords"
    ,
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a9d4da10-700c-43f1-87cf-d14b8bb74dc9"
      }
    }
  }
}
